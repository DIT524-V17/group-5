<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.gu.dit524.group5.bluetoothremote.MainActivity">

    <Button
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:id="@+id/aButton"
        android:layout_alignBaseline="@+id/sButton"
        android:layout_alignBottom="@+id/sButton"
        android:layout_toStartOf="@+id/sButton" />

    <Button
        android:text="D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dButton"
        android:layout_alignBaseline="@+id/sButton"
        android:layout_alignBottom="@+id/sButton"
        android:layout_toEndOf="@+id/sButton"
        android:layout_marginStart="16dp" />

    <Button
        android:text="W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wButton"
        android:layout_above="@+id/dButton"
        android:layout_alignStart="@+id/sButton" />

    <Button
        android:text="S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sButton"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@android:drawable/ic_menu_compass"
        android:id="@+id/compassView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dip"
        android:layout_height="150dip" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connectButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:id="@+id/throttleBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>
