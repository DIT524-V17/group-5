<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.gu.dit524.group5.bluetoothremote.MainActivity">

    <ImageView
        app:srcCompat="@android:drawable/ic_menu_compass"
        android:id="@+id/compassView"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_marginBottom="24dp"
        android:layout_alignBottom="@+id/throttleBar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connectButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:id="@+id/throttleBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:max="200"
        android:progress="100"
        android:rotation="-90"
        android:layout_alignTop="@+id/angleBar"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:id="@+id/angleBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:max="180"
        android:progress="90"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/throttleBar" />

    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/connectButton"
        android:layout_alignParentStart="true"
        android:text="SCAN" />

</RelativeLayout>
